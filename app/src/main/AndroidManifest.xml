<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hcmute.vtv_18110069_18110051_18110070.game_sudoku"
    android:installLocation="auto">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme">
        <activity android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.TitleScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.FolderListActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.SudokuListActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.SudokuEditActivity"
            android:label="@string/edit_sudoku">
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.SudokuImportActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:mimeType="application/x-opensudoku"
                    android:scheme="content" />
                <data
                    android:mimeType="application/x-opensudoku"
                    android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.sdm"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.sdm"
                    android:scheme="content" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.opensudoku"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.opensudoku"
                    android:scheme="content" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:mimeType="*/*"/>
            </intent-filter>
        </activity>
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.SudokuExportActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.SudokuPlayActivity"
            android:label="@string/app_name" />
        <activity
            android:name="hcmute.vtv_18110069_18110051_18110070.game_sudoku.gui.GameSettingsActivity"
            android:label="@string/game_settings"
            android:screenOrientation="portrait" />
    </application>

</manifest>
